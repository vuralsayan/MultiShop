@model List<ResultProductDto>
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Öne Çıkan Ürünler</span></h2>
    <div class="row px-xl-5">
        @foreach (var item in Model)
        {
            decimal x = ((item.ProductPrice / 100) * 15) + item.ProductPrice;
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img-container position-relative overflow-hidden">
                        <img class="product-img" src="@item.ProductImageUrl" alt="">
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href="/ShoppingCard/AddBasketItem/@item.ProductID"><i class="fa fa-shopping-cart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                            <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-search"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href="/ProductList/ProductDetail/@item.ProductID">@item.ProductName</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>@item.ProductPrice.ToString("C")</h5>
                            <h6 class="text-muted ml-2"><del>@x.ToString("C")</del></h6>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-1">
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small>(25)</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .product-img-container {
        width: 100%;
        height: 400px; 
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .product-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

</style>
