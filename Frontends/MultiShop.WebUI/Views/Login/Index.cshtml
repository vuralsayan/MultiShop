@model CreateLoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>MultiShop Gİriş</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/css/opensans-font.css">
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-30/fonts/line-awesome/css/line-awesome.min.css">
    <link href="~/colorlib-regform-30/css/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-30/css/style.css" />
</head>
<body class="form-v4">
    <div class="page-content">
        <div class="form-v4-content">
            <div class="form-left">
                <h2>MultiShop E-Ticaret</h2>
                <p class="text-1">MultiShop projemiz üzerinden e-ticaret işlemlerini gerçekleştirebilmek, indirimli ürünler ve fırsatlardan haberdar olmak adına hemen giriş işlemini gerçekleştirebilirsiniz.</p>
                <p class="text-2">Alışverişinizi gerçekleştirebilmek, sepetinize ürün eklemek ve ürün listesini görebilmek için oturum açmanız gerekmektedir. Bir hesabınız yoksa aşağıdan kayıt olabilirsiniz.</p>
                <div class="form-left-last">
                    <a href="/Register/Index" class="btn btn-light">Kayıt Ol</a>
                </div>
            </div>
            <form class="form-detail" method="post">
                <h2>MultiShop Giriş Formu</h2>
                <div class="form-row">
                    <label>Kullanıcı Adınız</label>
                    <input type="text" class="input-text" required asp-for="Username">
                </div>
                <div class="form-row">
                    <label>Şifreniz</label>
                    <input type="password" class="input-text" required asp-for="Password">
                </div>
                <div class="form-row-last">
                    <button class="btn btn-primary">Giriş Yap</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>