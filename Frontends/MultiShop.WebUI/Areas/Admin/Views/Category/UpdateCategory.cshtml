@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Güncelleme Sayfası</h4>
                <form method="post">
                    <div class="form-group">
                        <label>Kategori ID</label>
                        <input type="text" class="form-control" readonly asp-for="CategoryID">
                    </div>
                    <div class="form-group">
                        <label>Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName">
                    </div>
                    <div class="form-group">
                        <label>Kategori Görsel Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                    </div>
                    <button type="submit" class="btn btn-primary">Kategoriyi Güncelle</button>
                    <a href="/Admin/Category/Index" class="btn btn-danger">İptal</a>
                </form>
            </div>
        </div>
    </div>
</section>
