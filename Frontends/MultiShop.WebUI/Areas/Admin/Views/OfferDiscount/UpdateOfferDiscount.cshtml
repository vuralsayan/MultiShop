@model UpdateOfferDiscountDto
@{
    ViewData["Title"] = "UpdateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>İndirim Teklifi Güncelleme Sayfası</h4>
                <form method="post">
                    <input  type="hidden" asp-for="OfferDiscountID"/>
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label>Alt Başlık</label>
                        <input type="text" class="form-control" asp-for="SubTitle">
                    </div>
                    <div class="form-group">
                        <label>Görsel Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Buton Başlığı</label>
                        <input type="text" class="form-control" asp-for="ButtonTitle">
                    </div>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a href="/Admin/OfferDiscount/Index" class="btn btn-danger">İptal</a>
                </form>
            </div>
        </div>
    </div>
</section>

