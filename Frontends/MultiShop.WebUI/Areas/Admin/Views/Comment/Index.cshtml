@using System.Globalization
@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

@* ADMIN COMMENT INDEX *@
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorum Listesi</h4>
                <p>Yorumlar ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kullanıcı</th>
                                <th>Yorum</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.NameSurname</td>
                                    <td>@item.CommentDetail</td>
                                    <td>@item.CreatedDate.ToString("dd MMM yy", new CultureInfo("tr-TR"))</td>
                                    @if (item.Status == true)
                                    {
                                        <td><a href="javascript:void(0)" class="btn btn-success btn-rounded">Aktif</a></td>
                                    }
                                    else
                                    {
                                        <td><a href="javascript:void(0)" class="btn btn-danger btn-rounded">Pasif</a></td>
                                    }
                                    <td><a href="/Admin/Comment/DeleteComment/@item.UserCommentID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Comment/UpdateComment/@item.UserCommentID" class="btn btn-primary">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                </div>
            </div>
        </div>
    </div>
</section>

