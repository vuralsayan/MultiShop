@model List<ResultCargoCompanyDto>
@{
    ViewData["Title"] = "CargoCompanyList";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

@* ADMIN CARGO COMPANY LIST INDEX *@
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kargo Şirletleri Listesi</h4>
                <p>Kargo şirketleri ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kargo Adı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.CargoCompanyName</td>
                                    <td><a href="/Admin/Cargo/DeleteCargoCompany/@item.CargoCompanyID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Cargo/UpdateCargoCompany/@item.CargoCompanyID" class="btn btn-primary">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Admin/Cargo/CreateCargoCompany" class="btn btn-success">Yeni Kargo Şirketi Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>
