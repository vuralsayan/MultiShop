@using System.Globalization
@model List<ResultSendboxMessageDto>
@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Areas/User/Views/UserLayout/_UserLayout.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Gönderilen Mesajlar</h4>
                        <p class="card-description">
                            Gönderilen Mesaj Tablosu
                        </p>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Alıcı ID</th>
                                        <th>Konu</th>
                                        <th>Mesaj Tarihi</th>
                                        <th>Durum</th>
                                        <th>Sil</th>
                                        <th>Oku</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.ReceiverID</td>
                                            <td>@item.Subject</td>
                                            <td class="text-primary">@item.SendDate.ToString("dd MMMM yyy", new CultureInfo("tr-TR", false)) <i class="mdi mdi-calendar-today"></i></td>
                                            <td>@item.IsRead</td>
                                            <td><a href="#" class="btn btn-inverse-danger btn-fw">Sil</a></td>
                                            <td><a href="#" class="btn btn-inverse-primary btn-fw">Oku</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <vc:_footer-user-layout-component-partial />
</div>


