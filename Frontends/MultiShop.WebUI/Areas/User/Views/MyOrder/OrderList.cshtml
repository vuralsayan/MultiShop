@using System.Globalization
@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Areas/User/Views/UserLayout/_UserLayout.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sipariş Geçmişi</h4>
                        <p class="card-description">
                            Add class <code>.table-hover</code>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Toplam Fiyat</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>Sipariş Detayları</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.TotalPrice</td>
                                            <td class="text-primary">@item.OrderDate.ToString("dd MMMM yyy", new CultureInfo("tr-TR", false)) <i class="mdi mdi-calendar-today"></i></td>
                                            <td><a href="#" class="btn btn-inverse-success btn-fw">Detaylar</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <vc:_footer-user-layout-component-partial />
</div>

